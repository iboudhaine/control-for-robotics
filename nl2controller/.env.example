# NL2Controller Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# OpenAI API Configuration
# =============================================================================

# Your API key (required)
OPENAI_API_KEY=your-api-key-here

# Base URL - change for different providers
# OpenAI (default):  https://api.openai.com/v1
# Azure OpenAI:      https://<resource>.openai.azure.com/
# Ollama (local):    http://localhost:11434/v1
# vLLM (local):      http://localhost:8000/v1
# Together AI:       https://api.together.xyz/v1
# Anyscale:          https://api.endpoints.anyscale.com/v1
OPENAI_BASE_URL=https://api.openai.com/v1

# Model to use (examples)
# OpenAI:     gpt-4o-mini, gpt-4o, gpt-4-turbo
# Ollama:     llama3, mistral, codellama
# Azure:      gpt-4, gpt-35-turbo (your deployment name)
OPENAI_MODEL=gpt-4o-mini

# Temperature (0.0 = deterministic, higher = more creative)
OPENAI_TEMPERATURE=0.0

# Max tokens for response
OPENAI_MAX_TOKENS=1000

# Request timeout in seconds
OPENAI_TIMEOUT=30

# Organization ID (optional, OpenAI only)
# OPENAI_ORG_ID=org-...

# =============================================================================
# Pipeline Configuration
# =============================================================================

# Path to robot vocabulary JSON file
# NL2C_VOCABULARY_PATH=data/robot_vocabulary.json

# Strict grounding mode (recommended: true)
# If true, fails on unknown entities (SAFE)
# If false, tries fuzzy matching (UNSAFE for production)
NL2C_STRICT_GROUNDING=true

# Fuzzy matching threshold (only used if strict mode is false)
NL2C_FUZZY_THRESHOLD=0.6

# =============================================================================
# Synthesis Configuration
# =============================================================================

# GR(1) solver backend (gr1c or slugs)
NL2C_SOLVER=omega

# Synthesis timeout in seconds
NL2C_SYNTHESIS_TIMEOUT=60

# Verbose output from solver
NL2C_VERBOSE=false

# =============================================================================
# Logging
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
NL2C_LOG_LEVEL=INFO

# Log file (optional)
# NL2C_LOG_FILE=nl2controller.log
